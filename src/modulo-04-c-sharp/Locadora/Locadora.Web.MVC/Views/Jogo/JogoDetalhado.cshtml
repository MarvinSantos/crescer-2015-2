@model JogoDetalhadoModel
@{
    ViewBag.Title = Model.Nome;
}

<h2 class="inline-block left" >@ViewBag.Title</h2>

<form action='@Url.Action("JogoManter", "JogoManter")/@Model.Id'>
    <input class="btn margem right inline-block" type="submit" value="Editar jogo" />
</form>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Jogo</th>
            <th>Categoria</th>
            <th>Preço</th>
            <th>Selo</th>
            <th>ID</th>
        </tr>
    </thead>
    <tr>
        <td>@Model.Nome</td>
        <td>@Model.Categoria</td>
        <td>@Model.Preco.ToString("c")</td>
        <td>@Model.Selo.ToString()</td>
        <td>@Model.Id</td>
    </tr>
</table>
<div class="conteiner-video-img">
    <div class="inline-block tamanhoPadrao">
        <img class="img-responsive" src="@Model.Imagem" />
    </div>

    <div class="right tamanhoPadrao video inline-block">
        <iframe width="420" height="315" src="@Model.Video" frameborder="0" allowfullscreen></iframe>
    </div>
</div>

<div>
    <p class="descricao-jogo">
        Descrição: @Model.Descricao
    </p>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>