@model JogoDetalhadoModel
@{
    ViewBag.Title = Model.Nome;
}

<h2>@ViewBag.Title</h2>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Jogo</th>
            <th>Categoria</th>
            <th>Preço</th>
            <th>Selo</th>
            <th>ID</th>
        </tr>
    </thead>
    <tr>
        <td>@Model.Nome</td>
        <td>@Model.Categoria</td>
        <td>@Model.Preco.ToString("c")</td>
        <td>@Model.Selo.ToString()</td>
        <td>@Model.Id</td>
    </tr>
</table>
<div class="conteiner-video-img">
    <div class="inline-block">
        <img class="img-responsive tamanhoPadrao" src="@Html.Raw(Model.Imagem)" />
    </div>

    <div class="right tamanhoPadrao video inline-block">
        @Html.Raw(@Model.Video)
    </div>   
</div>

<div>
    <p class="descricao-jogo">
       Descrição: @Model.Descricao
    </p>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>