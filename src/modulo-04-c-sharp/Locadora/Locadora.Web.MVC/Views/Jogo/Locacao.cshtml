@model Locadora.Web.MVC.ViewModels.JogoLocacaoModel
@{
    ViewBag.Title = "Locacao";
}

@Styles.Render("~/Content/css")

<h2>Locacao</h2>

@Html.Partial("_JogoLocacao",Model)

<div class="block">

    @using (Html.BeginForm("SalvarLocacao", "Jogo",Model, FormMethod.Post, new { @class = "form-horizontal inline-block", role = "form" }))
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="form-group inline-block">
            @Html.LabelFor(m => m.Cliente.Nome, new { @class = "col-sm-2 control-label block" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Cliente.Nome, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Cliente.Nome)
            </div>
        </div>

        <input class="right btn" type="submit" name="enviar" value="Locar" />

    }

</div>




